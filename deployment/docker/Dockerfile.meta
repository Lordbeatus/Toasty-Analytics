# Dockerfile for Meta-Learning Service
FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY core/ ./core/
COPY database/ ./database/
COPY meta_learning/ ./meta_learning/
COPY services/meta_learning_service.py ./

# Expose port
EXPOSE 8001

# Run service
CMD ["python", "-m", "uvicorn", "meta_learning_service:app", "--host", "0.0.0.0", "--port", "8001"]
