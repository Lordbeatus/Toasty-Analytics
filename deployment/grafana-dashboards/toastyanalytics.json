{
  "dashboard": {
    "title": "ToastyAnalytics - AI Code Grading",
    "timezone": "browser",
    "panels": [
      {
        "title": "Grading Requests (Total)",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
        "targets": [{
          "expr": "grading_requests_total",
          "refId": "A"
        }]
      },
      {
        "title": "Grading Requests Rate",
        "type": "graph",
        "gridPos": {"x": 6, "y": 0, "w": 10, "h": 8},
        "targets": [{
          "expr": "rate(grading_requests_total[5m])",
          "legendFormat": "Requests/sec",
          "refId": "A"
        }]
      },
      {
        "title": "Cache Hit Rate",
        "type": "gauge",
        "gridPos": {"x": 16, "y": 0, "w": 8, "h": 4},
        "targets": [{
          "expr": "cache_hits_total / (cache_hits_total + cache_misses_total) * 100",
          "refId": "A"
        }],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 50, "color": "yellow"},
                {"value": 80, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "title": "Grading Duration (p95)",
        "type": "stat",
        "gridPos": {"x": 0, "y": 4, "w": 6, "h": 4},
        "targets": [{
          "expr": "histogram_quantile(0.95, grading_duration_seconds_bucket)",
          "refId": "A"
        }],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "title": "Active Celery Workers",
        "type": "stat",
        "gridPos": {"x": 16, "y": 4, "w": 8, "h": 4},
        "targets": [{
          "expr": "active_workers",
          "refId": "A"
        }]
      },
      {
        "title": "Grading Duration Distribution",
        "type": "heatmap",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [{
          "expr": "rate(grading_duration_seconds_bucket[5m])",
          "refId": "A",
          "format": "heatmap"
        }]
      },
      {
        "title": "Cache Performance",
        "type": "graph",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(cache_hits_total[5m])",
            "legendFormat": "Cache Hits",
            "refId": "A"
          },
          {
            "expr": "rate(cache_misses_total[5m])",
            "legendFormat": "Cache Misses",
            "refId": "B"
          }
        ]
      },
      {
        "title": "Top Users by Requests",
        "type": "table",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [{
          "expr": "topk(10, sum by (user_id) (grading_requests_total))",
          "refId": "A",
          "format": "table"
        }]
      },
      {
        "title": "Grading Dimensions",
        "type": "piechart",
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
        "targets": [{
          "expr": "sum by (dimension) (grading_requests_total)",
          "refId": "A"
        }]
      }
    ],
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "version": 1
  },
  "folderId": 0,
  "overwrite": true
}
