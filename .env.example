# Environment variables for ToastyAnalytics

# Database
TOASTYANALYTICS_DB_URL=postgresql://toasty:password123@postgres:5432/toastyanalytics

# Redis
REDIS_URL=redis://redis:6379/0

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Sentry (Error Tracking) - Get your DSN from https://sentry.io
SENTRY_DSN=

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Features
ENABLE_METRICS=true
ENABLE_CACHING=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
